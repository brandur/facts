= link_to "Permalink", category, :class => [ :tool, :permalink ]
- if authorized?(category)
  .actions_wrapper
    %a.actions_expand.tool{ :href => 'javascript:' } New Fact/Category
    %ul.actions.hide
      .clear
      %li
        .new_fact_form
          = render :partial => 'facts/form', :locals => { :fact => Fact.new(:category_id => category.id) }
      %li
        .new_category_form
          = render :partial => 'form', :locals => { :category => Category.new(:category_id => category.id) }
      %li
        %a.cancel{ :href => 'javascript:' } Cancel
.clear

- if category.facts.count > 0
  %ul.facts
    - category.facts.each do |f|
      %li.fact{ :id => f.id }
        = append_to_html raw(f.content_html), " #{link_to("Permalink", f, :class => [ :tool ])}"
- if category.children.count > 0
  .categories_wrapper
    %ul.categories
      - category.children.each do |c|
        %li{ :id => c.id, :class => c == category.children.last ? 'category last' : 'category' }
          %h3= c.name
          - if c.children.count > 0 && c.facts.count > 0
            %p.standin= "#{pluralize(c.facts.count, 'fact')}, #{pluralize(c.children.count, 'category')} hidden"
          - elsif c.facts.count > 0
            %p.standin= "#{pluralize(c.facts.count, 'fact')} hidden"
          - elsif c.children.count > 0
            %p.standin= "#{pluralize(c.children.count, 'category')} hidden"
          .content
          .clear
          %a.hide_content.hide{ :href => 'javascript:' } Hide
