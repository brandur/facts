%h1= @category.name

- if @category.ancestors.count > 0
  %ul
    - @category.ancestors.each do |p|
      %li= link_to p.name, category_path(p)

- @fact = Fact.new :category => @category
= render 'facts/form'

%ul
  - @category.facts.each do |f|
    %li= raw f.content_html

- @category.children.each do |c|
  %h2= c.name

  %ul
    - c.facts.each do |f|
      %li
        = raw f.content_html
        = link_to 'Permalink', fact_path(f)

= link_to 'Edit', edit_category_path(@category)
\|
= link_to 'Back', categories_path
